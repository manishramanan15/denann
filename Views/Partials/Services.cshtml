@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

<section id="@CurrentPage.Name.ToLower()">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@CurrentPage.Title</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var childPage in CurrentPage.Children)
            {

                <div class="col-lg-4 col-md-6 text-center">
                    <div class="service-box">
                        <i class="@childPage.GetPropertyValue("cssClassName")"></i>
                        <h3>@childPage.GetPropertyValue("title")</h3>
                        <p class="text-muted">
                            @Umbraco.Truncate(childPage.GetPropertyValue("description"), 100)
                            <a href="@umbraco.library.NiceUrl(childPage.Id)"><i class="fa fa-icon fa-external-link"></i></a>
                        </p>
                    </div>
                </div>

            }
            
          
        </div>
    </div>
</section>
